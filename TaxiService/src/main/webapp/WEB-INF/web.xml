<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:javaee="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    id="Your_WebApp_ID"
    version="2.5">

<jsp-config>
    <jsp-property-group>
        <url-pattern>*.jsp</url-pattern>
        <el-ignored>false</el-ignored>
        <scripting-invalid>false</scripting-invalid>
    </jsp-property-group>
  </jsp-config>

 <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>resources</param-value>
  </context-param>
  
  <!-- this way we set the default locale (optional) -->
  <!-- the (preferable) browser's locale will be used if we don't set the default locale --> 
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
    <param-value>ru</param-value>
  </context-param>
  
  <!-- supported locales -->
  <context-param>
    <param-name>locales</param-name>
    <param-value>ru en</param-value>
  </context-param>

	
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>com.taxi.web.filter.EncodingFilter</filter-class>
	</filter>
	
	
	<filter>
		<filter-name>GeneralPagesAccess</filter-name>
		<filter-class>com.taxi.web.filter.GeneralPagesAccess</filter-class>
	</filter>

	<filter>
		<filter-name>AccessFilter</filter-name>
		<filter-class>com.taxi.web.filter.AccessFilter</filter-class>
		<init-param>
			<param-name>ADMIN</param-name>
			<param-value>listOrders adminPage showRides</param-value>
		</init-param>
		<init-param>
			<param-name>CLIENT</param-name>
			<param-value>account ride rideConfirmed rideDetails</param-value>
		</init-param>
		<init-param>
			<param-name>common</param-name>
			<param-value>logout lang</param-value>
		</init-param>

		<init-param>
			<param-name>out-of-control</param-name>
			<param-value>login register lang</param-value>
		</init-param>

	</filter>
	
	
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>GeneralPagesAccess</filter-name>
		<url-pattern>/login.jsp</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>GeneralPagesAccess</filter-name>
		<url-pattern>/register.jsp</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>GeneralPagesAccess</filter-name>
		<url-pattern>/index.jsp</url-pattern>
	</filter-mapping>


	<filter-mapping>
		<filter-name>AccessFilter</filter-name>
		<servlet-name>controller</servlet-name>
	</filter-mapping>


	<listener>
		<listener-class>com.taxi.web.listener.ContextListener</listener-class>
	</listener>


	<servlet>
		<servlet-name>controller</servlet-name>
		<servlet-class>com.taxi.web.Controller</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>controller</servlet-name>
		<url-pattern>/controller</url-pattern>
	</servlet-mapping>


	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/error_page.jsp</location>
	</error-page>
</web-app>